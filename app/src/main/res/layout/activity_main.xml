<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.example.laserbender.presentation.canvas.LaserCanvasView
        android:id="@+id/laserCanvas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/undoRedoContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/rounded_transparent_background"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="48dp"
        android:layout_marginStart="16dp">

        <ImageButton
            android:id="@+id/btnUndo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_undo"
            android:background="@drawable/button_background_default"/>

        <ImageButton
            android:id="@+id/btnRedo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_redo"
            android:background="@drawable/button_background_default"
            android:layout_marginStart="8dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/zoomContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/rounded_transparent_background"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="16dp">

        <ImageButton
            android:id="@+id/btnLockView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_lock_open"
            android:background="@drawable/button_background_default"/>

        <TextView
            android:id="@+id/tvZoomLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            tools:text="100%"/>

        <ImageButton
            android:id="@+id/btnResetView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_reset_view"
            android:background="@drawable/button_background_default"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="@drawable/rounded_transparent_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp">

        <ImageButton
            android:id="@+id/btnAddLight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_add_light"
            android:background="@drawable/button_background_default"
            android:layout_marginEnd="8dp"/>

        <ImageButton
            android:id="@+id/btnAddMirror"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_add_mirror"
            android:background="@drawable/button_background_default"
            android:layout_marginEnd="8dp"/>

        <ImageButton
            android:id="@+id/btnAddFlag"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_add_flag"
            android:background="@drawable/button_background_default"
            android:layout_marginEnd="16dp"/>

        <ImageButton
            android:id="@+id/btnDelete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_delete"
            android:background="@drawable/button_background_red"
            android:visibility="invisible"
            android:layout_marginEnd="8dp"/>

        <ImageButton
            android:id="@+id/btnChangeColor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_change_color"
            android:background="@drawable/button_background_default"
            android:visibility="invisible"
            android:layout_marginEnd="8dp"/>

        <ImageButton
            android:id="@+id/btnSave"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_save"
            android:background="@drawable/button_background_green"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>